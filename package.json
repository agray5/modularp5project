{
  "name": "p5-typescript-starter",
  "version": "1.0.0",
  "description": "Project to quickly get something working in [p5.js](https://p5js.org/) and [typescript](https://www.typescriptlang.org/)",
  "scripts": {
    "browser": "browser-sync mochawesome-report --index mochawesome.html  -w",
    "mocha": "mocha test/**/*.ts --watch --reporter mochawesome",
    "test": "concurrently \"npm run mocha\" \"npm run browser\"",
    "start-old": "run-p start-compile start-run",
    "start-compile": "tsc --watch",
    "start-run": "browser-sync start --server -w",
    "start": "webpack-dev-server -d",
    "build": "webpack --config webpack.config.js --mode production",
    
    "deploy": "npm run build && gh-pages -d dist",
    "check-types": "tsc",
    "compile": "babel src -d lib --extensions '.ts,.tsx'"
  },
  "homepage": "https://github.com/Gaweph/p5-typescript-starter#readme",
  "directories": {
    "src": "./sketch",
    "test": "./test"
  },
  "devDependencies": {
    "@babel/core": "^7.7.7",
    "@babel/plugin-proposal-class-properties": "^7.7.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.7.7",
    "@babel/plugin-proposal-optional-chaining": "^7.7.5",
    "@babel/preset-env": "^7.7.7",
    "@babel/preset-typescript": "^7.7.7",
    "@types/p5": "^0.9.0",
    "babel-core": "^6.26.3",
    "babel-loader": "^8.0.6",
    "babel-register": "^6.26.0",
    "babelify": "^10.0.0",
    "browser-sync": "^2.26.7",
    "browserify": "^16.5.0",
    "chai": "^4.2.0",
    "concurrently": "^5.0.2",
    "gh-pages": "^2.1.1",
    "istanbul": "^0.4.5",
    "mocha": "^7.0.0",
    "mochawesome": "^4.1.0",
    "npm-run-all": "^4.1.5",
    "ts-loader": "^6.2.1",
    "typescript": "^3.6.3",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.10.1"
  },
  "dependencies": {
    "@babel/register": "^7.7.7",
    "@types/chai": "^4.2.7",
    "@types/mocha": "^5.2.7",
    "@types/ramda": "^0.26.39",
    "p5": "^0.10.2",
    "ramda": "^0.26.1",
    "save-dev": "0.0.1-security",
    "uuid": "^3.3.3"
  }
}
