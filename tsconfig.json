{
    "compilerOptions": {
        "target": "esnext",
        "moduleResolution": "node",
        "allowJs": true,
        "isolatedModules": true,
        "removeComments": true,
        "preserveConstEnums": true,
        //"outFile": "./build/build.js",
        "sourceRoot": "./sketch/*",
        "rootDir": "./sketch/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "esModuleInterop": true
    },
	"include": [
		"sketch", "sketch/webpack.config.js"
	]
}